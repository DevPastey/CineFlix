{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "ignoreDeprecations": "6.0",
    "jsx": "react-native",       // for React 17+
    "allowJs": true,          // (optional) if mixing JS and TS
    "target": "ES2020",                 // or "ESNext"
    "module": "ESNext",                 // or "preserve"
    "moduleResolution": "bundler",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
   "ts-node": {
    "skipIgnore": true,
    "transpileOnly": true
  }
}
